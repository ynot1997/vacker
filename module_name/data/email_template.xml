<odoo>
    <data>
        <record id="crm_lead_mail_template" model="mail.template">
            <field name="name">CRM LEAD MAIL TEMPLATE</field>
            <field name="model_id" ref="vacker_sales.model_lead_notification">
            <field name="auto_delete" eval="False"/>
            <field name="email_from">${(object.res_user_id.email}</field>
            <field name="email_to">${object.emp_id.work_email}</field>
            <field name="subject">${object.amc}
            Congrats leads is get converted </field>
            <field name="body_html"><![CDATA[
         <p>Dear ${(object.client_name.name)},<br/><br/>
         Good job, you've just created your lead to opportunity!<br/></p>
              Regards,<br/>
              ${(object.company_id.name)} ]]></field>
            <field name="lang">${user.lang}</field>
        </record>
    </data>
</odoo>