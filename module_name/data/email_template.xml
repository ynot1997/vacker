<odoo>
    <record id="crm_lead_mail_template" model="mail.template">
        <field name="name">CRM LEAD MAIL TEMPLATE</field>
        <field name="model_id" ref="crm.model_crm_lead"/>
        <field name="auto_delete" eval="False"/>
        <field name="subject">${object.amc} Congrats leads is get converted</field>
        <field name="body_html"><![CDATA[
         <p>Dear ${(object.user_id.name)},<br/><br/>
         Good job, you've just created your lead to opportunity!<br/></p>
              Regards,<br/>
              ${(object.company_id.name)} ]]></field>
        <field name="lang">${user.lang}</field>
    </record>

</odoo>